<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Artist</th>
      <th scope="col">Title</th>
      <th scope="col">Rating</th>
      <th scope="col">Favorite</th>
    </tr>
  </thead>
  <tbody>
    {{#each songs}}
        <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.artist}}</td>
        <td>{{this.title}}</td>
        <td>{{this.rating}}</td>
        <td><button class="fav-song">Favorite Song</button></td>
        </tr>
    {{/each}}
  </tbody>
</table>

<form action="/api/song" method="POST">
  <div class="form-group">
    <label for="artist">Artist</label>
    <input type="text" class="form-control" name="artist"  placeholder="Enter artist name" required>
  </div>
  <div class="form-group">
    <label for="title">Song Title</label>
    <input type="text" class="form-control" name="title"  placeholder="Enter a song title name" required>
  </div>
  <div class="form-group">
    <label for="rating">Song rating</label>
    <input type="number" class="form-control" name="rating" min="1" max="10" placeholder="Enter a song rating" required>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>